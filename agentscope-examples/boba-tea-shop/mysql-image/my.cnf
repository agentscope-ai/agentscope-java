# MySQL 8.0 UTF-8 配置
# 确保中文和其他多字节字符正确存储和显示

[client]
default-character-set = utf8mb4

[mysql]
default-character-set = utf8mb4

[mysqld]
# 字符集设置
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci
init_connect = 'SET NAMES utf8mb4'

# 确保所有连接使用 UTF-8
skip-character-set-client-handshake

# 默认时区
default-time-zone = '+08:00'

